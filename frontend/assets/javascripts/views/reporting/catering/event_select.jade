
.panel(ng-repeat="event in events")
  .title(ng-bind="event.name")
  hr
  div.flex-panel-grid.quad
    div.category.panel(ng-repeat="date in event.dates" ng-click="openSelectionModal(date)").clickable
      .top-bar
        .title
          span(ng-bind="date.start | amDateFormat: 'D'")
          sup(ng-bind="date.start | amDateFormat: 'Do' | filterNumeric" )
          span(ng-bind="date.start | amDateFormat: ' MMMM YYYY'" )
          .time(ng-bind="date.start | amDateFormat: 'h:mm a'")
      hr
      p {{date.confirmations}} Confirmed
      p {{date.total_inventory}} Total Inventory
      p Event&nbsp;
        span {{ date.start | timeFromNow }}
        //span(am-time-ago="date.start")
